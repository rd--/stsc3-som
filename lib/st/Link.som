Link = Object (

| nextLink |

asLink = (
	^ self
)

nextLink = (
	^ nextLink
)

nextLink: aLink = (
	"Store the argument, aLink, as the link to which the receiver refers.
	Answer aLink."
	^ nextLink := aLink
)

----------------------------

nextLink: aLink = (
	"Answer an instance of me referring to the argument, aLink."
	^self new nextLink: aLink; yourself
)

)
